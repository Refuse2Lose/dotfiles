#!/bin/sh

if [ -d .git ]; then
  echo already a git repo!;
  git add .; git commit -m "Saved for uploading to Heroku"
else
  git init; git add .; git commit -m "Initial Commit"
fi;

sudo heroku create
sudo heroku container:login
sudo heroku container:push web

sudo heroku addons:create heroku-postgresql:hobby-dev

sudo heroku config:set RAILS_ENV=production SECRET_KEY_BASE=supersecret RAILS_LOG_TO_STDOUT=true

sudo git push heroku master
sudo heroku run rails db:migrate


